# =============================================
# IntelWatch TI Platform — Environment Variables
# =============================================
# Copy this file to .env and fill in values.
# Required values are marked with (REQUIRED).

# ── General ──────────────────────────────────────────────
ENVIRONMENT=development
LOG_LEVEL=INFO
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# ── Domain Configuration ────────────────────────────────
# Set these for production deployment with your actual domain
DOMAIN=intelwatch.trendsmap.in
DOMAIN_UI=https://intelwatch.trendsmap.in
DOMAIN_API=https://intelwatch-api.trendsmap.in

# ── PostgreSQL + TimescaleDB ─────────────────────────────
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ti_platform
POSTGRES_USER=ti
POSTGRES_PASSWORD=change-me-strong-password
DATABASE_URL=postgresql+asyncpg://ti:change-me-strong-password@postgres:5432/ti_platform

# ── Redis ────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0

# ── OpenSearch ───────────────────────────────────────────
OPENSEARCH_URL=http://opensearch:9200
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_VERIFY_CERTS=false

# ── Authentication ───────────────────────────────────────
# Set to true for local development without SSO
DEV_BYPASS_AUTH=true
JWT_EXPIRE_MINUTES=480

# ── Cloudflare Zero Trust SSO (Production) ──────────────
# Follow setup guide in cloudflare/tunnel-config.yml
CF_ACCESS_TEAM_NAME=your-team
CF_ACCESS_AUD=your-audience-tag
CF_TUNNEL_TOKEN=

# ── Feed API Keys ────────────────────────────────────────
NVD_API_KEY=
ABUSEIPDB_API_KEY=
OTX_API_KEY=
VIRUSTOTAL_API_KEY=
SHODAN_API_KEY=

# ── AI / Open-WebUI ─────────────────────────────────────
AI_API_URL=http://localhost:3000/api/chat/completions
AI_API_KEY=
AI_MODEL=llama3
AI_TIMEOUT=30
AI_ENABLED=true

# ── Frontend ─────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=IntelWatch - TI Platform
